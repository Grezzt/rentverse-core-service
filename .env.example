# ========================================
# RentVerse Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# ========================================
# DATABASE
# ========================================
# Local Development (Docker):
# DATABASE_URL=postgresql://rentverse:rentverse@localhost:5432/rentverse?schema=public

# Production (Railway):
DATABASE_URL=postgresql://postgres:PASSWORD@HOST:PORT/railway
rentverse-core-service-production.up.railway.app
# ========================================
# SERVER
# ========================================
NODE_ENV=development
PORT=3000
APP_NAME=RentVerse
APP_VERSION=1.0.0

# ========================================
# JWT SECRETS
# ========================================
# Generate secure secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# GOOGLE OAUTH
# ========================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=451684083302-3akpsnucahav0mjf5prp37tn60t8p8kn.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ========================================
# CORS (Cross-Origin Resource Sharing)
# ========================================
# Development: Allow all origins
CORS_ORIGIN=*

# Production: Specify allowed origins (comma-separated)
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# ========================================
# STORAGE CONFIGURATION
# ========================================
# Choose storage provider: 'cloudinary' or 's3'
STORAGE_PROVIDER=cloudinary

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf

# ========================================
# CLOUDINARY (Image & Video Storage) - RECOMMENDED
# ========================================
# Free tier: 25 GB storage + 25 GB bandwidth/month
# Get credentials from: https://cloudinary.com/console
# Tutorial: See CLOUDINARY_SETUP_GUIDE.md
CLOUDINARY_CLOUD_NAME=your-cloud-name-here
CLOUDINARY_API_KEY=your-api-key-here
CLOUDINARY_API_SECRET=your-api-secret-here
CLOUDINARY_FOLDER=rentverse

# ========================================
# AWS S3 / MinIO (Alternative Storage)
# ========================================
# Only needed if STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-minio-access-key
# AWS_SECRET_ACCESS_KEY=your-minio-secret-key
# AWS_BUCKET=rentverse-uploads
# AWS_DEFAULT_REGION=us-east-1
# AWS_ENDPOINT=http://localhost:9000
# AWS_URL=http://localhost:9000
# AWS_USE_PATH_STYLE_ENDPOINT=true
# STORAGE_FOLDER_PREFIX=rentverse

# ========================================
# SUPABASE (Alternative Storage - DEPRECATED)
# ========================================
# Get from: https://supabase.com/
# SUPABASE_URL=your-supabase-project-url
# SUPABASE_KEY=your-supabase-anon-key
# SUPABASE_BUCKET_NAME=rentverse-uploads

# ========================================
# OPTIONAL: Other OAuth Providers
# ========================================
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY=your-apple-private-key

# ========================================
# OPTIONAL: Email Service (for notifications)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@rentverse.com

# ========================================
# OPTIONAL: Redis (for caching)
# ========================================
# REDIS_URL=redis://localhost:6379
